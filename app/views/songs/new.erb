<h1>Create a song</h1>

<form action="/songs" method="post">
  <label for="song[name]">Name</label>
  <input type="text" name="Name" id="Name"><br>

  <label for="song[artist_name]">Artist Name</label>
  <input type="text" name="Artist Name" id="Artist Name"><br>

  <label for="genres[]">Genres:</label>
  <% Genre.all.each do |genre| %>
    <input type="checkbox" name="genres[]" value="<%= genre.name %>" id="<%= genre.name %>"><%= genre.name %></input><br>
  <% end %>
    <input type="text" name="new_genre"><br>

  <input type="submit" value="Create">
</form>
